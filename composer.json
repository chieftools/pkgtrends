{
    "name": "chieftools/pkgtrends",
    "description": "A quick way to compare package downloads across languages.",
    "keywords": [
        "package",
        "trends",
        "packagist",
        "npm",
        "pypi",
        "hex",
        "wordpress"
    ],
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.209",
        "google/cloud-bigquery": "1.23.*",
        "guzzlehttp/guzzle": "7.5.*",
        "laravel/framework": "9.36.*",
        "laravel/helpers": "1.5.*",
        "laravel/horizon": "^5.9",
        "laravel/tinker": "2.7.*",
        "sentry/sentry-laravel": "3.0.*",
        "stayallive/laravel-eloquent-uuid": "1.0.*"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "3.7.*",
        "barryvdh/laravel-ide-helper": "2.12.*",
        "friendsofphp/php-cs-fixer": "3.12.*",
        "nunomaduro/collision": "6.3.*",
        "nunomaduro/larastan": "2.2.*",
        "spatie/laravel-ignition": "1.5.*",
        "wnx/laravel-stats": "2.9.*"
    },
    "replace": {
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "autoload": {
        "psr-4": {
            "ChiefTools\\Pkgtrends\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan horizon:publish",
            "@generate:ide"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "cs": [
            "@phpcs",
            "yarn prettier"
        ],
        "ide": "@generate:ide",
        "stan": "@phpstan",
        "check": [
            "@phpcs",
            "@phpstan"
        ],
        "phpcs": "vendor/bin/php-cs-fixer fix",
        "phpcs:ci": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=2G",
        "phpstan:ci": "vendor/bin/phpstan analyse --memory-limit=2G --error-format github",
        "generate:ide": [
            "@php artisan ide-helper:meta"
        ]
    },
    "config": {
        "platform": {
            "php": "8.2.4"
        },
        "allow-plugins": {
            "php-http/discovery": false,
            "composer/package-versions-deprecated": true
        },
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    }
}
